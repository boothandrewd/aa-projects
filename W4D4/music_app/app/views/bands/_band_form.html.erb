<% action, method = if band.persisted? %>
  <% [edit_band_url(band), 'patch'] %>
<% else %>
  <% [bands_url, 'post'] %>
<% end %>

<%= render 'shared/errors' %>

<form action="<%= action %>" method="post">
  <%= hidden_form_action(method) %>
  <%= auth_token %>

  <label for="name">Name:</label>
  <input type="text" name="band[name]" value="<%= band.name %>">

  <br>
  <br>

  <input type="submit">
</form>
