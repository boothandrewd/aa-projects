<%= link_to "#{@album.band.name} albums", band_url(@album.band_id) %>

<h2><%= @album.name %></h2>

<br><br>

<h3>Tracks</h3>
<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to track.name, track_url(track) %></li>
  <% end %>
</ul>

<br><br>

<%= link_to 'Add track', new_album_track_url(@album) %>

<br><br>

<%= button_to 'Delete album', album_url(@album), method: :delete %>
